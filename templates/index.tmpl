<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Where is Josh</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,700" rel="stylesheet">

    <style>
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }

      body {
        background: #333;
        color: #fff;
        font: 16px/1.3 'Lato', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
        text-align: center;
      }

      .container {
        padding: 20px;
      }

      .context {
        text-transform: uppercase;
        font-weight: 300;
        opacity: 0.6;
      }

      .place {
        font-size: 3rem;
        font-weight: 700;
        margin: 20px 0;
      }

      .place__icon {
        display: block;
        margin: 0 auto;
        height: 44px;
      }

      @media screen and (min-width: 960px) {
        body {
          font-size: 20px;
          text-align: left;
          width: 960px;
        }

        .place {
          margin: 10px 0;
        }

        .place__icon {
          margin: 0;
          float: right;
          height: 100%;
        }
      }

      @media screen and (min-height: 415px) {
        .container {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
        }
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="context">
        Josh was last seen {{.TimeAgo}} at
      </div>

      <div class="place">
        <img src="{{.IconURL}}" class="place__icon">
        {{.Venue.Name}}
      </div>

      <div class="context">
        {{.Venue.Location.City}}, {{.Venue.Location.Country}}
      </div>
    </div>
  </body>
</html>
